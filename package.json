{
    "name": "baolocre_home",
    "version": "1.7.0",
    "description": "Bao Loc Real Estate",
    "bin": "bin/createNodejsApp.js",
    "main": "src/index.js",
    "repository": "https://github.com/hagopj13/node-express-boilerplate.git",
    "author": "Nguyen Khac Khanh (Encacap) <encacap@encacap.com>",
    "license": "MIT",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "start": "pm2 start ecosystem.config.json --no-daemon",
        "dev": "cross-env NODE_ENV=development nodemon src/index.js",
        "dev:nomailer": "cross-env NODE_ENV=development nodemon src/index.js --nomailer",
        "postcss": "postcss ./src/resources/css/app.css ./src/resources/css/home.css ./src/resources/css/real_estate_detail.css -d ./src/assets/css/ --map --ext .min.css",
        "build:css": "cross-env NODE_ENV=production npm run postcss",
        "build:css:full": "cross-env NODE_ENV=development npm run postcss",
        "build:js": "cross-env NODE_ENV=production webpack --config webpack.config.js",
        "build:copy": "node ./build/index.js",
        "watch:js": "npm run build:js -- -w",
        "watch:css": "cross-env NODE_ENV=production npm run postcss -- -w",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --check **/*.js",
        "prettier:fix": "prettier --write **/*.js",
        "build": "npm run build:css && npm run build:js && npm run build:copy"
    },
    "keywords": [
        "node",
        "node.js",
        "boilerplate",
        "generator",
        "express",
        "rest",
        "api",
        "mongodb",
        "mongoose",
        "es6",
        "es7",
        "es8",
        "es9",
        "jest",
        "travis",
        "docker",
        "passport",
        "joi",
        "eslint",
        "prettier"
    ],
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.0.0",
        "express-rate-limit": "^5.0.0",
        "helmet": "^4.1.0",
        "html-minifier": "^4.0.0",
        "http-status": "^1.4.0",
        "joi": "^17.3.0",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.24.0",
        "mongoose": "^5.7.7",
        "morgan": "^1.9.1",
        "nodemailer": "^6.3.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pm2": "^5.1.0",
        "remove-markdown": "^0.3.0",
        "validator": "^13.0.0",
        "winston": "^3.2.1",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "@splidejs/splide": "^3.2.7",
        "@splidejs/splide-extension-video": "^0.5.14",
        "@tailwindcss/line-clamp": "^0.2.2",
        "autoprefixer": "^10.4.0",
        "cssnano": "^5.0.10",
        "eslint": "^7.0.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-security": "^1.4.0",
        "fs-extra": "^10.0.0",
        "lint-staged": "^11.0.0",
        "node-mocks-http": "^1.8.0",
        "nodemon": "^2.0.0",
        "postcss": "^8.3.11",
        "postcss-cli": "^9.0.2",
        "postcss-import": "^14.0.2",
        "postcss-nested": "^5.0.6",
        "prettier": "^2.0.5",
        "tailwindcss": "^2.2.19",
        "webpack": "^5.63.0",
        "webpack-cli": "^4.9.1",
        "cross-env": "^7.0.0"
    }
}
