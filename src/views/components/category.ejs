<%
    const { categories } = locals;
    const categoryLength = categories.length;
%>
<div class="flex mb-4 border-b-2 md:border-0 border-gray-100">
    <% categories.forEach((category, index) => { %>
        <a
            href="<%= category.url %>"
            class="
                flex-1
                md:flex-none
                flex flex-col
                md:w-40
                mb-2
                <% if (index !== categoryLength - 1) { %> mr-4 <% } %>
                md:px-4
                pt-2
                pb-2
                md:pb-4
                items-center
                rounded-md
                md:bg-gray-100
                duration-200
                hover:bg-encacap-main hover:text-white
            "
        >
            <div class="rounded-full md:mt-4 w-16 h-16 border-2 border-gray-200 overflow-hidden">
                <img
                    src="<%= category.icon %>"
                    alt="<%= category.name %>"
                    class="w-full h-full object-cover object-center"
                />
            </div>
            <div class="flex-1 flex flex-col justify-center mt-4 mb-1 px-1 text-center">
                <div class="font-semibold"><%= category.name %></div>
            </div>
        </a>
    <% }) %>
</div>