                <% menu.forEach((item, index) => {%>
                    <%
                        let className = "py-2 mr-6";
                        if ((activeIndex - 1) === index || (!activeIndex && index === 0)) {
                            className += " active text-encacap-main";
                        }
                    %>
                    <a href="<%= item.url %>" class="<%= className %>">
                        <%= item.name %>
                    </a>
                <%}) %>
            </nav>
